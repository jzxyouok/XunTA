<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_app_icon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:src="@drawable/pic1"/>
    
    <Button
        android:id="@+id/btn_launch_activity_login"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/iv_app_icon"
        android:layout_marginTop="60dp"
        android:textSize="20sp"
        android:background="@drawable/btn_border_bg"
        android:text="登录"/>

    <Button
        android:id="@+id/btn_launch_activity_register"
        android:layout_centerHorizontal="true"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_below="@+id/btn_launch_activity_login"
        android:layout_marginTop="60dp"
        android:textSize="20sp"
        android:background="@drawable/btn_border_bg"
        android:text="注册"/>

</RelativeLayout>
