<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="false">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.zhenai.xunta.widget.CustomizedTitleBar
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:title_back_icon_visible="false"
            app:title_back_icon="@drawable/arrow_left"
            app:title_text="我">
        </com.zhenai.xunta.widget.CustomizedTitleBar>

        <!--个人资料-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp">

            <ImageView
                android:id="@+id/iv_avatar"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:background="@drawable/pic1"
                tools:background="@drawable/pic1"/>

            <TextView
                android:id="@+id/tv_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/iv_avatar"
                android:layout_alignTop="@+id/iv_avatar"
                android:layout_marginStart="20dp"
                tools:text="小明"/>

            <ImageButton
                android:id="@+id/btn_edit_self_introduction"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignTop="@+id/iv_avatar"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:background="@drawable/edit"/>

            <TextView
                android:id="@+id/tv_show_self_introduction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/iv_avatar"
                android:layout_alignBottom="@+id/iv_avatar"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:maxLines="2"
                android:text="这是我的内存独白"
                tools:text="好想找一个依赖的人，这是我的内心独白好想找一个依赖的人，这是我的内心独白"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimary"/>

        <!--照片展示-->
        <android.support.v7.widget.RecyclerView
            android:id="@+id/picture_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_centerInParent="true">
        </android.support.v7.widget.RecyclerView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimary"/>

        <!--其他功能-->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.zhenai.xunta.widget.ItemLinearLayout
                android:id="@+id/my_release"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:icon_drawable="@drawable/release"
                app:icon_text="我的发布"/>

            <com.zhenai.xunta.widget.ItemLinearLayout
                android:id="@+id/my_purchase"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:icon_drawable="@drawable/release"
                app:icon_text="我的预约"/>

            <com.zhenai.xunta.widget.ItemLinearLayout
                android:id="@+id/my_focus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:icon_drawable="@drawable/release"
                app:icon_text="我的关注"/>

            <com.zhenai.xunta.widget.ItemLinearLayout
                android:id="@+id/member_center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:icon_drawable="@drawable/member_center"
                app:icon_text="会员中心"/>

            <com.zhenai.xunta.widget.ItemLinearLayout
                android:id="@+id/my_chat_coupon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:icon_drawable="@drawable/member_center"
                app:icon_text="我的聊天券"/>

            <com.zhenai.xunta.widget.ItemLinearLayout
                android:id="@+id/individuality_show"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:icon_drawable="@drawable/member_center"
                app:icon_text="个性化展示"/>

            <com.zhenai.xunta.widget.ItemLinearLayout
                android:id="@+id/my_certification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:icon_drawable="@drawable/member_center"
                app:icon_text="我的认证"/>

            <com.zhenai.xunta.widget.ItemLinearLayout
                android:id="@+id/setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:icon_drawable="@drawable/setting"
                app:icon_text="设置"/>

        </LinearLayout>

    </LinearLayout>


</ScrollView>
