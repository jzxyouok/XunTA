<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="false">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <!--个人资料-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_avatar"
                android:layout_width="100dp"
                android:layout_height="100dp"
               android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:background="@drawable/pic1"
                tools:background="@drawable/pic1"/>
            <LinearLayout
                android:layout_width="160dp"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/iv_avatar"
                    android:layout_alignTop="@+id/iv_avatar"
                    android:layout_marginStart="20dp"
                    android:text="小明"
                    tools:text="小明"/>

                <TextView
                    android:id="@+id/tv_user_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="12345678"
                    tools:text="12345678"/>

                <!--<com.hymane.expandtextview.ExpandTextView
                    android:id="@+id/etv_self_introduction"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    app:contentTextSize="14sp"
                    app:textContentColor="?android:attr/textColorPrimary"
                    app:textHintColor="?android:attr/textColorPrimary"
                    app:textTitleColor="?android:attr/textColorSecondary"/>-->
                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="60dp">
                    <jaydenxiao.com.expandabletextview.ExpandableTextView
                        android:id="@+id/etv_self_introduction"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/tv_user_id"
                        android:layout_toRightOf="@+id/iv_avatar"
                        android:layout_marginStart="20dp"
                        app:animDuration="200"
                        app:collapseDrawable="@drawable/icon_green_arrow_down"
                        app:collapseExpandGrarity="right"
                        app:collapseExpandTextColor="@color/main_color"
                        app:contentTextColor="@color/gray"
                        app:contentTextSize="14sp"
                        app:expandDrawable="@drawable/icon_green_arrow_up"
                        app:maxCollapsedLines="2"/>

                </LinearLayout>




            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp">
                <ImageButton
                    android:id="@+id/btn_edit_self_introduction"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/edit"/>
            </RelativeLayout>

        </LinearLayout>



        <!--照片展示-->
        <android.support.v7.widget.RecyclerView
            android:id="@+id/picture_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            tools:listitem="@layout/list_item_image">
        </android.support.v7.widget.RecyclerView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimary"/>

        <!--其他功能-->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.zhenai.xunta.widget.ItemLinearLayout
                android:id="@+id/my_release"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:icon_drawable="@drawable/release"
                app:icon_text="我的发布"/>

            <com.zhenai.xunta.widget.ItemLinearLayout
                android:id="@+id/my_appointment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:icon_drawable="@drawable/release"
                app:icon_text="我的预约"/>

            <com.zhenai.xunta.widget.ItemLinearLayout
                android:id="@+id/my_focus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:icon_drawable="@drawable/release"
                app:icon_text="我的关注"/>

            <com.zhenai.xunta.widget.ItemLinearLayout
                android:id="@+id/my_blaklist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:icon_drawable="@drawable/release"
                app:icon_text="我的黑名单"/>

            <com.zhenai.xunta.widget.ItemLinearLayout
                android:id="@+id/member_center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:icon_drawable="@drawable/member_center"
                app:icon_text="会员中心"/>

            <com.zhenai.xunta.widget.ItemLinearLayout
                android:id="@+id/my_chat_coupon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:icon_drawable="@drawable/member_center"
                app:icon_text="我的聊天券"/>

            <com.zhenai.xunta.widget.ItemLinearLayout
                android:id="@+id/customized_display"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:icon_drawable="@drawable/member_center"
                app:icon_text="个性化展示"/>

            <com.zhenai.xunta.widget.ItemLinearLayout
                android:id="@+id/my_certification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:icon_drawable="@drawable/member_center"
                app:icon_text="我的认证"/>

            <com.zhenai.xunta.widget.ItemLinearLayout
                android:id="@+id/setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:icon_drawable="@drawable/setting"
                app:icon_text="设置"/>

        </LinearLayout>

    </LinearLayout>


</ScrollView>
