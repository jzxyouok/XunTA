<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@color/blue">

    <RelativeLayout
        android:id="@+id/layout_fragment_findta_title"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <ImageButton
            android:id="@+id/imgBtn_search"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:background="@drawable/search"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:layout_height="40dp">
            <Button
                android:id="@+id/btn_oneday_partner"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_toEndOf="@+id/imgBtn_search"
                android:background="@drawable/btn_bg_oneday_partner"
                android:text="一日情侣"/>
            <Button
                android:id="@+id/btn_activities"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_toEndOf="@+id/btn_oneday_partner"
                android:background="@drawable/btn_bg_activities"
                android:text="陪伴活动"/>

        </LinearLayout>

        <!--设置TextView为可点击-->
        <TextView
            android:id="@+id/tv_wanna_release"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:textSize="16sp"
            android:text="我要发布"/>

    </RelativeLayout>


</RelativeLayout>